{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "labels": ["A-dependencies"],
    "packageRules": [
        {
          "matchPackagePatterns": ["npm"],
          "labels": ["T-npm"]
        },
        {
          "matchPackagePatterns": ["nodenv"],
          "labels": ["T-node"]
        },
        {
          "matchPackagePatterns": ["github-actions"],
          "labels": ["A-ci"]
        }
    ]
}
